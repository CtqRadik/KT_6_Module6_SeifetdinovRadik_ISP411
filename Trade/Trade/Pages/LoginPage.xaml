<Page x:Class="Trade.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Trade.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage" Background="White">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Логин:">
            </Label>
            <TextBox x:Name="LoginTextBox" VerticalContentAlignment="Center"></TextBox>
            <Label Content="Пароль:"></Label>
            <PasswordBox x:Name="LoginPasswordBox" VerticalContentAlignment="Center"></PasswordBox>
            <Button Content="Войти" x:Name="LoginButton" Click="LoginButton_Click" Margin="10"></Button>
            <Button Content="Гость" x:Name="GuestButton" Click="GuestButton_Click" Margin="10"></Button>
        </StackPanel>
        
    </Grid>
</Page>
